<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d5790c" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="12dp"
            android:text="Well come Menu:"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/menu_wraper1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_btn_a1"
                style="@style/layout_image_button"
                android:onClick="MenuClick"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv1"
                    style="@style/menu_text"
                    android:text="Collect Data" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/blue_scan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_a2"
                style="@style/layout_image_button"
                android:onClick="MenuClick"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv2"
                    style="@style/menu_text"
                    android:text="Start Classifier" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/blue_record" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_a3"
                style="@style/layout_image_button"
                android:onClick="MenuClick"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv2"
                    style="@style/menu_text"
                    android:text="Compute Features" />

                <ImageView
                    android:id="@+id/img_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/blue_reserve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/menu_wraper2"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_btn_b1"
                style="@style/layout_image_button"
                android:onClick="MenuClick"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv3"
                    style="@style/menu_text"
                    android:text="Ask Question" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/blue_setting" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_b2"
                style="@style/layout_image_button"
                android:onClick="MenuClick"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv4"
                    style="@style/menu_text"
                    android:text="Get Feedback" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/blue_about" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_b3"
                style="@style/layout_image_button"
                android:onClick="MenuClick"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv2"
                    style="@style/menu_text"
                    android:text="Give Feedback" />

                <ImageView
                    android:id="@+id/img_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/blue_power_off" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/menu_wraper3"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_button"
            android:onClick="MenuClick"
            android:text="Sync Repo Data"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_button"
            android:onClick="MenuClick"
            android:text="Stored Responses"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>